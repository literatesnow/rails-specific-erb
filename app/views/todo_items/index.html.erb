<div class=".col-sm">
  <h1>Listing articles</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Text</th>
        <th scope="col">Due Date</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @todo_items.each do |todo_item| %>
        <tr>
          <td><%= link_to todo_item.title, todo_item_path(todo_item) %></td>
          <td><%= todo_item.text %></td>
          <td><%= todo_item.due_date %></td>
          <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
          <td><%= link_to 'Delete', todo_item_path(todo_item),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <tbody>
  </table>

  <p><%= link_to 'New Todo', new_todo_item_path, { class: 'btn btn-primary' } %></p>
</div>
