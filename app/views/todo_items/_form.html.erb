<%= bootstrap_form_with model: @todo_item, local: true, bootstrap: { layout: :vertical } do |form| %>
  <%= form.text_field :title %>
  <%= form.text_area :text, { class: 'form_text' } %>
  <%= form.datetime_field :due_at, { class: 'form_due_at' } %>
  <% unless isNew %>
    <%= form.check_box :completed %>
  <% end %>
  <%= form.primary do %>
    <%= link_to 'Cancel', todo_items_path, { class: 'btn btn-default' } %>
  <% end %>
<% end %>
