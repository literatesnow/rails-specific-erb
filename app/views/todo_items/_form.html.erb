<% if @todo_item.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@todo_item.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @todo_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= bootstrap_form_with model: @todo_item do |form| %>
  <%= form.text_field :title %>
  <%= form.text_area :text %>
  <%= form.date_field :due_date %>
  <%= form.primary do %>
    <%= link_to 'Cancel', todo_items_path, { class: 'btn btn-default' } %>
  <% end %>
<% end %>
